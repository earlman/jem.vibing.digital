---
content: 
   backgroundImage: "/background.png"
   title: Jan Emily M
   links:
      - 
         image: https://res.cloudinary.com/foundations-design/image/upload/v1693520390/sm-icons/instagram.svg
         url: janemilym.com
      -
         image: https://res.cloudinary.com/foundations-design/image/upload/v1693520390/sm-icons/spotify.svg
         url: https://open.spotify.com/user/1244110737?si=3d616a5a69654238
# headline: what's the vibe?
# headlineColor: "white"
theme: 
   titleColor: "white"
   desktopAspectRatio: 9/16 # popular on social media
developerSettings:
   baseUrl: jem.vibing.digital
   lyket: false
---


{# ! INCOMPLETE #}
{# These #}

{% extends "base.njk" %}
{% block content %}

   <main>
      <hgroup>
         {# <h1>
        <svg id="svg-title">
          <text font-family="Fraunces Variable"  y="50" >{{title}}</text>
        </svg>
      </h1> #}
         <h1 class="title">{{content.title}}</h1>
         <p class="headline">{{content.headline}}</p>
      </hgroup>

      <nav class="links">
         {% for link in content.links %}
            <div class="link">
               <a target="_blank" href="{{link.url}}"><img src="{{link.image}}"/></a>
            </div>
         {% endfor %}
      </nav>
   </main>

</body>

<!-- The following code sets <text> at 
  90vw on portrait devices and 20vh on landscape devices-->
<style>
   @media screen and (orientation: portrait) {
      .svg-title {
         width: 90vw;
         height: auto;
      }
   }

   @media screen and (orientation: landscape) {
      .svg-title {
         width: auto;
         height: 20lvh;
      }
   }
</style>

<style>

   :root {
      --font-secondary: "Anonymous Pro";
   }

   hgroup {
      width: 100% ;
      height: max-content;
      place-self: flex-start center;
      position: absolute;
      top: 20lvh;
      background-color: rgba(72, 72, 72, 0.4);
      height: 8rem;
      display: grid;
      place-content: center;
   }

   hgroup h1 {
      width: 100% ;
      color: {{theme.titleColor}};
      margin: 0;
      line-height: 1;
      text-align: center;
   }

   hgroup p {
      color: {{headlineColor}};
      text-align: right;
      margin-top: -0.5rem;
      margin-right: 0.5em;
      letter-spacing: 0.09em;
      opacity: 0.9;
   }

   body {
      background-image: url({{content.backgroundImage}});
      background-position: 50% 50%;
      background-size: cover;
      position: relative;
   }
   
   main {
      height: 100%;
      display: grid;
   }
   
   .logo {
      max-width: 30px;
   }

   .links {
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
      max-height: 48lvh;
      flex-wrap: wrap;
      direction: rtl;

      position: absolute;
      right: 12.5vw;
      bottom: 20lvh;
   }
   @media screen and (orientation: portrait) {
      h1.title {
         font-size: clamp(24px, 20lvw, 100px);
         text-align: center;
         text-transform: lowercase;
      }

      hgroup .headline {
         font-size: 4vw;
      }
   }

   @media screen and (orientation: landscape) {
      h1.title {

      }
   }
</style>

<script>
   // In order to resize SVGs, a viewBox must be set
   // The following code sets the viewBox based on the size of the browser window.
   const svg = document.querySelector('#svg-title');
   const svg_text = document.querySelector('#svg-title text');
   const bbox = svg.getBBox();
   svg.setAttribute('viewBox', `${bbox.x} ${bbox.y} ${bbox.width * 1.5} ${bbox.height}`);
   svg_text.setAttribute('x', '50%')
   svg_text.setAttribute('text-anchor', 'middle')
</script>

{% endblock %}